<catel:DataWindow x:Class="Orc.LicenseManager.Views.ClipBoardWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				  xmlns:catel="http://catel.codeplex.com" Style="{DynamicResource MetroWindowStyle}">
    
    <!-- Resources -->
    <catel:DataWindow.Resources>
        <ResourceDictionary Source="../Styles.xaml" />
    </catel:DataWindow.Resources>

    <!-- Content -->
    <catel:StackGrid MinWidth="150" MinHeight="150">
        <catel:StackGrid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </catel:StackGrid.RowDefinitions>
        <TextBox Text="{Binding ClipBoardText}" AcceptsReturn="True" TextWrapping="Wrap" TextAlignment="Justify"  IsEnabled="False"/>
        <Button Grid.Row="1" Style="{StaticResource RoundButtonTemplate}" Command="{Binding Exit}" Width="100" Content="Close"/>
    </catel:StackGrid>
</catel:DataWindow>
